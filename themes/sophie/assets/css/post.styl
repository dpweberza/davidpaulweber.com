.post-date
  color #9E9E9E

.post-title
  font-size 32px
  font-weight 600
  line-height 1
  margin-bottom 16px
  text-transform uppercase
  & > a
    color #182532

.post-read-more
  background-color #ededed
  border-radius 3px
  color #656565
  display block
  padding 8px 16px
  text-align center

.post-tag
  color #9E9E9E
  margin-right 5px

@media only screen and (min-width 768px)
  .post-read-more
    display inline-block
    text-align center